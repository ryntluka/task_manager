= javascript_pack_tag 'switch_button'
h1= t(:tasks)
= simple_form_for :search, url: tasks_path, method: :get, html: { class: 'form-inline' } do |f|
  = f.input :title, input_html: {value: ""}
  = f.submit "Search", class: "btn btn-primary"
.btn-group
  = link_to "All",
          tasks_path,
          class: "btn btn-outline-primary m-0 active",
          id: "btn1",
          method: :get,
          remote: true
  = link_to "Active",
          tasks_path(request.query_parameters.merge({ done: false })),
          class: "btn btn-outline-primary",
          id: "btn2",
          method: :get,
          remote: true
  = link_to "Finished",
          tasks_path(request.query_parameters.merge({ done: true })),
          class: "btn btn-outline-primary",
          id: "btn3",
          method: :get,
          remote: true
#tasks-container
  = render 'tasks/tasks_list'
/ == pagy_bootstrap_nav(@pagy)
= link_to new_task_path, class: 'btn' do
  = t(:create_new)
  '
  i.bi.bi-plus